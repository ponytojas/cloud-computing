apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          image: nginx:alpine
          ports:
            - containerPort: 80
            - containerPort: 443
          volumeMounts:
            - name: config-volume
              mountPath: /etc/nginx/nginx.conf
              subPath: nginx.conf
            - name: cert-volume
              mountPath: /etc/nginx/certs
              readOnly: true
      volumes:
        - name: config-volume
          configMap:
            name: nginx-config
        - name: cert-volume
          secret:
            secretName: ssl-certs
